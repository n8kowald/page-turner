{
  "name": "Page Turner", 
  "version": "1.0",
  "manifest_version": 2,
  "description": "Makes it easy to browse through paginated webpages using your keyboard arrow keys. Perfect for search results, image galleries and more.",
  "browser_action": { "default_icon": "icons/icon-inactive.png" },
  "permissions": ["tabs"],
  "icons": {
    "16": "icons/icon-inactive.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png" 
  },
  "background": { "scripts": ["background.js"] },
  "content_scripts": [{
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery.js", "page-turner.js"]
  }]
}
