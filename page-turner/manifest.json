{
  "name": "Page Turner", 
  "version": "1.0",
  "description": "Control pagination using the left/right arrow keys",
  "browser_action": { "default_icon": "icons/icon-inactive.png" },
  "permissions": ["tabs"],
  "icons": {
    "16": "icons/icon-inactive.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png" 
  },
  "background": { "scripts": ["background.js"] },
  "content_scripts": [{
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery.js", "functions.js"]
  }]
}
