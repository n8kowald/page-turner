{
	"name": "Page Turner", 
	"version": "2.2",
	"manifest_version": 2,
	"description": "Navigate paginated webpages using your keyboard's arrow keys. Perfect for search results, image galleries and more.",
	"browser_action": { 
		"default_icon": "icons/icon-inactive.png",
		"default_popup": "popup/popup.html"
	},
	"permissions": ["tabs", "storage", "http://*/*", "https://*/*"],
	"web_accessible_resources": [
		"icons/next.png", 
		"icons/back.png"
	],
	"icons": {
		"16": "icons/icon-inactive.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png" 
	},
	"background": { 
		"scripts": ["background.js"] 
	},
	"content_scripts": [{
		"matches": ["http://*/*", "https://*/*"],
		"js": ["jquery-1.9.0.min.js", "page-turner.js"],
		"css": ["styles.css"]
	}]
}
