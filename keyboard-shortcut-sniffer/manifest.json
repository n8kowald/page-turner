{
  "name": "KB Shortcut Sniffer",
  "version": "1.0",
  "description": "Looks for keyboard shortcut mappings and accesskeys, if found tells you",
  "permissions": [
    "tabs",
    "notifications",
    "http://*/*",
    "https://*/*"
  ],
  "background": { "scripts": ["background.js"] },
  "browser_action": {
    "default_icon": "icon16.png",
    "popup": "popup.html"
  },
  "icons": { "16": "icon16.png",
             "48": "icon32.png",
            "128": "icon32.png" },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery.js", "kb-shortcut-functions.js"],
      "css": ["styles.css"]
    }
  ]
}
